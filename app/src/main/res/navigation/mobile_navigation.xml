<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ru.ialmostdeveloper.soulfire_mobile.ui.SignInFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_sign_in" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="ru.ialmostdeveloper.soulfire_mobile.ui.SignUpFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_sign_up" />

    <fragment
        android:id="@+id/navigation_daily_achievements"
        android:name="ru.ialmostdeveloper.soulfire_mobile.ui.DailyAchievementsFragment"
        android:label="@string/title_daily_achievements"
        tools:layout="@layout/fragment_daily_achievements" />
</navigation>